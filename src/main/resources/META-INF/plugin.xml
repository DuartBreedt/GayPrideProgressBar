<idea-plugin>
    <id>com.duartbreedt.movementprogressbars</id>
    <name>Movement</name>
    <vendor email="duartbreedt@gmail.com" url="https://github.com/DuartBreedt">DuartBreedt</vendor>

    <description><![CDATA[
    <p>Adds LGBTQIA+ progress bars to your IDE!</p>
    <br/>
    <p>You can choose from:</p>
    <ul>
        <li>Agender</li>
        <li>Gay pride</li>
        <li>Transgender</li>
        <li>Agender</li>
        <li>Aromantic</li>
        <li>Asexual</li>
        <li>Bigender</li>
        <li>Bisexual</li>
        <li>Gay Men</li>
        <li>Gay Pride</li>
        <li>Genderfluid</li>
        <li>Genderqueer</li>
        <li>Lesbian</li>
        <li>Non-Binary</li>
        <li>Pansexual</li>
        <li>Polysexual</li>
        <li>Transgender</li>
        <li>Bear Brotherhood</li>
        <li>Leather</li>
        <li>Lipstick Lesbian</li>
    </ul>
    ]]></description>

    <change-notes><![CDATA[
            <ul>
                <li>Ported the plugin to older IDE versions</li>
            </ul>
        ]]></change-notes>

    <version>1.1.0</version>

    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService
                serviceImplementation="com.duartbreedt.movementprogressbars.MovementSettingsState"/>
        <applicationConfigurable
                parentId="tools"
                instance="com.duartbreedt.movementprogressbars.MovementConfigurable"
                id="com.duartbreedt.movementprogressbars.MovementConfigurable"
                displayName="Movement"/>
    </extensions>

    <application-components>
        <component>
            <implementation-class>
                com.duartbreedt.movementprogressbars.MovementApplicationComponent
            </implementation-class>
        </component>
    </application-components>
</idea-plugin>