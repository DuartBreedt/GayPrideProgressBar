<idea-plugin>
    <id>org.example.MovementProgressBars</id>
    <name>Movement</name>
    <vendor email="duartbreedt@gmail.com" url="https://github.com/DuartBreedt">DuartBreedt</vendor>

    <description><![CDATA[
    LGBTQIA+ progress bars!<br/>
    This includes:
    <ul>
        <li>Classic pride</li>
        <li>Transgender</li>
    </ul>
    ]]></description>

    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
    </extensions>

    <actions>

        <group id="ViewMovementProgressBarsPlugin" text="Movement" description="Settings for Movement progress bars" popup="true" compact="true">
            <add-to-group group-id="ViewMenu" anchor="after" relative-to-action="ViewAppearanceGroup"/>

            <action class="com.duartbreedt.movementprogressbars.SetFlagToClassicPrideAction"
                    id="Movement.Actions.ChangeFlag.ClassicPride" text="Classic Pride" icon="/classic_pride.svg"/>

            <action class="com.duartbreedt.movementprogressbars.SetFlagToTransgenderAction"
                    id="Movement.Actions.ChangeFlag.Transgender" text="Transgender" icon="/transgender.svg"/>
        </group>

    </actions>

    <application-components>
        <component>
            <implementation-class>com.duartbreedt.movementprogressbars.MovementApplicationComponent
            </implementation-class>
        </component>
    </application-components>
</idea-plugin>